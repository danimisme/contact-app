<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2 class="mb-3"><i class="bi bi-pencil-square me-1"></i>Edit Contact</h2>

      <% if (typeof errors !== 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form action="/contact?_method=PUT" method="POST">
        <div>
          <input type="hidden" name="id" value="<%= contact._id %>" />
          <input
            type="hidden"
            name="oldNama"
            value="<%= contact.oldNama || contact.nama %>"
          />
        </div>
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            value="<%= contact.nama %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email </label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">Nomor Handphone</label>
          <input
            type="nohp"
            class="form-control"
            id="nohp"
            name="nohp"
            value="<%= contact.nohp %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">
          <i class="bi bi-pencil-square me-1"></i>Ubah
        </button>
        <a href="/contact" class="btn btn-secondary"
          ><i class="bi bi-arrow-left me-1"></i>Kembali</a
        >
      </form>
    </div>
  </div>
</div>
